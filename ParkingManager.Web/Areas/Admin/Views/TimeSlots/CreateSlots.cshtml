@{
    ViewData["Title"] = "CreatePayment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" type="text/css" />
<body>
    <div class="page-wrapper" style="min-height: 754px;background-color: #f8f9fa;">
        <div class="content container-fluid">

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" style="background-color: #263b6b;color: #fff;">
                        <div class="card-title" style="font-weight:bold;">Create Time Slots for date @ViewBag.AppointmentDate</div>
                        <input type="hidden" name="Date" value="@ViewBag.AppointmentDate" id="txtSlotDate" />
                    </div>
                    <div class="card-body">

                        <div class="container">
                            <div class="clear">

                                <div style="display:none;" id="dvError">
                                    <div class="alert alert-danger" role="alert">
                                        <h6 id="info"></h6>
                                    </div>
                                </div>

                                <div style="display:none;" id="dvSuccess">
                                    <div class="alert alert-success" role="alert">
                                        <h6 id="passwordChangeSuccess"></h6>
                                    </div>
                                </div>
                                <form id="frmTimeSlot">

                                    <div class="row">

                                        <input type="hidden" class="form-control" name="AppointmentDate" id="txtAppointmentDate" value='@ViewBag.AppointmentDate'>


                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Time From</label>
                                                <input type="time" class="form-control" name="FromTime" id="txtFromTime">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label">Time To</label>
                                                <input type="time" class="form-control" name="ToTime" id="txtToTime">
                                            </div>
                                        </div>

                                    </div>

                                    <hr />

                                    <div class="col-md-3  pull-right">
                                        <div class="form-group row">
                                            <input type="button" id="btnSubmit" class="form-control btn btn-outline-primary" value="Submit">
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="card">
                    <div class="card-body">

                        <table id="tblSlots" class="table table-sm">
                            <thead>
                                <tr>

                                    <th>SN.</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Appointment Date</th>
                                    <th>Status</th>
                                    <th>Created By</th>
                                    <th>Action</th>

                                </tr>
                            </thead>

                        </table>


                    </div>
                </div>

            </div>


        </div>
    </div>
</body>


<div class="modal fade" id="modalTimeSlotUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Slots</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmServices">
                    <div class="row form-row">
                        <input type="text" class="form-control" name="Id" id="txtId">


                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Time From</label>
                                <input type="time" class="form-control" name="FromTime" id="txtFromTime1">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Time To</label>
                                <input type="time" class="form-control" name="ToTime" id="txtToTime1">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnSubmitService" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="~/ParkingManager/timeslot.js"></script>



