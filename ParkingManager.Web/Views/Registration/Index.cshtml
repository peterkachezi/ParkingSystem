                                    <label for="exampleInputEmail1">Married For :</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="RefBy" aria-describedby="emailHelp">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Unprotected married life :</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="RefBy" aria-describedby="emailHelp">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Type of contraception :</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="RefBy" aria-describedby="emailHelp">
                                </div>
                            </div>
                        </div>



                        <div class="row mt-2">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Sexual history:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="RefBy" aria-describedby="emailHelp">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Attention to fertile period :</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="RefBy" aria-describedby="emailHelp">
                                </div>
                            </div>


