@{
	ViewData["Title"] = "Index";
}

<link href="~/booking/css/style.css" rel="stylesheet" />
<link href="~/css/appointment.css" rel="stylesheet" />

<html>



<body>
	<div style="margin-top:-3rem;">
		<form id="frmSubAppointment" method="post" action="" class="col-md-8">
			<h1>Book Parking Lot</h1>
			<!-- One "tab" for each step in the form: -->
			<div class="tab">

				<div class="card">
					<div class="container">

						<div class="row mt-3">
							<div id="slots">
							</div>
						</div>

						<div class="row">

							<div id="divShowMessage" style="display:none;">
								<div class="alert alert-danger" role="alert" id="error">
									<div id="divmessage"></div>
								</div>
							</div>
						</div>

					</div>
				</div>

			</div>

			<div class="tab">

				<div class="main-wrapper">

					<div class="content">

						<div class="container">

							<div class="row">

								<div class="col-md-12 col-lg-12">
									<div class="card book-info">
										<div class="info-widget">
											<div class="card-header">
												<h4 class="card-title">Personal Information</h4>
											</div>
											<div class="card-body">

												<div class="row">
													<div class="col-md-6 col-sm-12">
														<div class="form-group">
															<label>First Name</label>
															<input class="form-control" type="text" name="FirstName" id="txtFirstName">
														</div>
													</div>
													<div class="col-md-6 col-sm-12">
														<div class="form-group">
															<label>Last Name</label>
															<input class="form-control" type="text" name="LastName" id="txtLastName">
														</div>
													</div>
													<div class="col-md-6 col-sm-12">
														<div class="form-group">
															<label>Email</label>
															<input class="form-control" type="email" name="Email" id="txtEmail">
														</div>
													</div>
													<div class="col-md-6 col-sm-12">
														<div class="form-group">
															<label>Phone</label>
															<input class="form-control" type="text" name="PhoneNumber" id="txtPhoneNumber">
														</div>
													</div>

													<div class="col-md-6 col-sm-12">
														<div class="form-group">
															<label>Car Reg No / Number Plate</label>
															<input class="form-control" type="text" name="CarRegNo" id="txtRegistrationNo">
														</div>
													</div>
												</div>

											</div>


											<div class="card-body inf-widget">
												<div class="payment-widget">
													<h4 class="card-title">Payment</h4>
													<div class="payment-list">


														<div class="row" id="divPaybill">

															<div id="mpesa_paybill" class="text-center">
																<p style="color:#513c3c;">You can also pay using Lipa na MPESA by using the following instructions:</p>

															</div>

															<div class="row">
																<div class="col-md-4">
																	<img class="mpesa-logo" src="~/img/mpesa-logo.png" alt="Logo">
																</div>
																<div class="col-md-6">

																	<ol>
																		<li>Go to the M-PESA menu</li>
																		<li>Select Lipa na M-PESA</li>
																		<li> Select the Paybill option</li>
																		<li class="MpesaShortCode">Enter business number <strong>206206</strong> </li>
																		<li class="MpesaAccountNumber">Enter your account number <strong>Your National ID</strong></li>
																		<li class="MpesaAmount">Enter the amount Ksh <strong>Ksh @ViewBag.Fees</strong> </li>
																		<li>Enter PIN and press OK to send </li>
																	</ol>
																</div>
															</div>
														</div>
													</div>


												</div>

												<br />


												<br />
												<div class="card-body inf-widget col-md-12">
													<div class="payment-widget">
													</div>
												</div>

												<div class="row">
													<div class="">
														<label for="card_name">Enter Mpesa Reference / Transaction Number</label>
														<input type="text" class="form-control mt-2 col-md-6" name="TransactionNumber" id="txtTransactionNumber">
													</div>
												</div>

											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

			<div class="tab">

				<div class="theiaStickySidebar" style="padding-top: 0px; padding-bottom: 1px; position: static; transform: none; left: 12px; top: 0px;">
					<div class="card booking-card">
						<div class="card-header">
							<h4 class="card-title">Booking Summary</h4>
						</div>
						<div class="card-body">

							<div class="booking-doc-info">
							</div>
							<br />
							<div class="booking-summary border-0">
								<div class="booking-item-wrap">
									<ul class="booking-date">
										<li>First Name <span id="txtCustomerFName"></span></li>
										<li>Last Name <span id="txtCustomerLName"></span></li>
										<li>Email <span id="txtSummaryEmail"></span></li>
										<li>Phone Number <span id="txtSummaryPhoneNo"></span></li>
										<li>Car Reg No  <span id="txtRegistrationNo2"></span></li>
										<li>Transaction Number<span id="txtSummaryTransactionNumber"></span></li>
									</ul>
									<ul class="booking-fee">
										<li>Parking Fee <span>Ksh @ViewBag.Fees</span></li>

									</ul>
								</div>
								@*<div class="col-md-6 col-sm-12">
								<div class="form-group">
								<label>Email</label>
								<input class="form-control" type="email" name="Email" id="txtEmail">
								</div>
								</div>*@

							</div>
						</div>
						<div class="card-footer">
							<div class="booking-total">
								<ul class="booking-total-list">
									@* <li>
									<span>Total</span>
									<span class="total-cost">Ksh 2,500</span>
									</li>*@
								</ul>
							</div>
						</div>


					</div>
				</div>
			</div>
			@*
			<div class="tab">
			</div>*@

			<div style="overflow:auto;">
				<div style="float:right;">
					<button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
					<button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
					<button type="button" id="btnSubmit" style="display:none;" onclick="SubmitBooking()">Submit</button>
				</div>
			</div>

			<!-- Circles which indicates the steps of the form: -->
			<div style="text-align:center;margin-top:40px;">
				<span class="step"></span>
				<span class="step"></span>
				<span class="step"></span>


			</div>
		</form>

	</div>


	<link href="~/SweetAlart/sweetalert.min.css" rel="stylesheet" />
	<script src="~/SweetAlart/sweetalert.min.js"></script>
	<script src="~/ParkingManager/booking.js"></script>

</body>
</html>

<style>

	.label {
		border: 1px solid;
		margin: 5px;
		padding: 10px;
		cursor: pointer;
		width: 13rem;
		color: #455A64;
	}

		.label input {
			position: absolute;
			display: none;
			color: #fff !important;
		}

</style>


<script>

	$("#txtAppointmentDate").datepicker({ minDate: 0 });

	$('#divCloseError').delay(3000).hide(1000);

	$('#divCloseSuccess').delay(3000).fadeOut('slow');

</script>