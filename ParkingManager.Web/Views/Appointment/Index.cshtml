                                    <li>Appointment Fee <span>Ksh 2,500</span></li>

                                    </ul>*@
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="booking-total">
                                <ul class="booking-total-list">
                                    @* <li>
                                    <span>Total</span>
