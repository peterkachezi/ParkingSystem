<html>



<body>
    <div style="margin-top:-3rem;">
        <form id="frmSubAppointment" method="post" action="" class="col-md-8">
            <h1>Book Appointment</h1>
            <!-- One "tab" for each step in the form: -->
            <div class="tab">

                <div class="card">
                    <div class="container">

                        <div class="col-md-3 mt-3">
                            <div class="form-group">
                                <label>Select Appointment Date</label>
                                <input type="text" name="NewAppointmentDate" onchange="GetSlotsByDate(this)" id="txtAppointmentDate" class="form-control" value='@DateTime.Now.ToString("MM/dd/yyyy")' autocomplete="off" />

                            </div>
                        </div>

                        <hr />

                        <div class="row mt-3">
                            <div id="slots">
                            </div>
                        </div>

                        <div class="row">

                            <div id="divShowMessage" style="display:none;">
                                <div class="alert alert-danger" role="alert" id="error">
                                    <div id="divmessage"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="tab">

                <div class="main-wrapper">

                    <div class="content">

                        <div class="container">

                            <div class="row">

                                <div class="col-md-12 col-lg-12">
                                    <div class="card book-info">
                                        <div class="info-widget">
                                            <div class="card-header">
                                                <h4 class="card-title">Personal Information</h4>
                                            </div>
                                            <div class="card-body">

                                                <div class="row">
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>First Name</label>
                                                            <input class="form-control" type="text" name="FirstName" id="txtFirstName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Last Name</label>
                                                            <input class="form-control" type="text" name="LastName" id="txtLastName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Email</label>
                                                            <input class="form-control" type="email" name="Email" id="txtEmail">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Phone</label>
                                                            <input class="form-control" type="text" name="PhoneNumber" id="txtPhoneNumber" placeholder="07XX XXX XXX">
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

